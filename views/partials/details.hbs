<div id="details" class="details">




  {{#if badAdd}}
  <br> <br>
    <div class='formMessage'>Item already exists in wishlist..</div>
  {{/if}}
  {{#if emailSent}}
  <br> <br>
    <div class='formMessage'>Password Recovery Email Sent!</div>
  {{/if}}
  {{#if notFound}}
    <div id="err">{{error}}</div>
  {{/if}}
  {{> list}}
  <p>{{{gameThumb}}}</p>
  <p>{{gamename}}</p>
  <p>{{price}}</p>
  <p>{{discount}}</p>
  <p>{{score}}</p>

  {{#if displayDetails}}
  	<form action="/addToWishlist" method="post">
    	<input id="add-btn" class="btn btn-primary" type="submit" value="Add To Wishlist">
  	</form>
  {{/if}}
</div>
